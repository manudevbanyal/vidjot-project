
 <div class="card card-body">

            <h1> Edit Video Idea</h1>
                 <form action="/ideas/{{idea.id}}" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" id="title" value="{{idea.title}}">
                    </div>
                    <div class="form-group">
                        <label for="details">Details</label>
                        <textarea class="form-control" name="details" id="details">{{idea.details}}</textarea>
                    </div>
                     <button type="submit" class="btn btn-primary">Update Idea</button>
                  </form>


 </div>